---
const EVENT_LINK = "https://uzziticket.com/ingresso_ind.php?in=3855";
const VENUE_LINK = "https://cocobambu.com.br/unidades/cb-bh-anchieta";
---

<footer id="ingresso" class="relative py-20 md:py-28 px-6">
  <!-- Top decorative line -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gold/20 to-transparent" aria-hidden="true"></div>

  <div class="max-w-4xl mx-auto text-center">
    <!-- Price section -->
    <div class="mb-10" data-animate>
      <span class="inline-block px-4 py-1.5 bg-gold/10 border border-gold/30 text-gold text-sm font-semibold tracking-wider uppercase rounded-full mb-6">
        Lote Único e Exclusivo
      </span>

      <div class="mb-2">
        <span class="text-white/50 text-lg">Investimento:</span>
      </div>

      <div class="text-5xl sm:text-6xl md:text-7xl font-heading font-bold text-white mb-2">
        R$ <span class="text-gold">129</span><span class="text-gold text-4xl sm:text-5xl">,90</span>
      </div>

      <p class="text-white/40 text-sm">
        Inclui Open Wine, Menu Premium e todas as palestras.
      </p>
    </div>

    <!-- CTA Button -->
    <div class="mb-16" data-animate="fade-up" style="transition-delay: 0.1s;">
      <a
        href={EVENT_LINK}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-cta text-xl px-12 py-5"
      >
        Comprar Ingresso
      </a>
    </div>

    <!-- Venue / Address -->
    <div
      class="border-t border-white/5 pt-10"
      data-animate="fade-up"
      style="transition-delay: 0.2s;"
    >
      <div class="flex flex-col items-center gap-4">
        <!-- Location icon -->
        <div class="w-14 h-14 rounded-full bg-gold/10 flex items-center justify-center">
          <svg class="w-7 h-7 text-gold" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
            <circle cx="12" cy="10" r="3" />
          </svg>
        </div>

        <div>
          <a
            href={VENUE_LINK}
            target="_blank"
            rel="noopener noreferrer"
            class="text-lg font-heading font-bold text-white hover:text-gold transition-colors duration-300"
          >
            Coco Bambu Anchieta
          </a>

          <p class="text-white/50 text-sm mt-1 max-w-md mx-auto">
            Rua Francisco Deslandes, 900 — Anchieta, Belo Horizonte – MG, 30310-530
          </p>

          <p class="text-gold/60 text-xs mt-2 italic">
            (Serviço de valet disponível no local)
          </p>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-6 border-t border-white/5 text-white/30 text-xs">
      <p>&copy; 2026 Business & Wine. Todos os direitos reservados.</p>
    </div>
  </div>
</footer>
